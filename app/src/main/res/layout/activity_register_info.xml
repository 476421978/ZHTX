<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.zhtx.activity.RegisterInfoActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/activity_registerInfo_iv_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/head" />

        <Button
            android:id="@+id/activity_registerInfo_btn_changeHead"
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:text="选择头像"
            android:background="@drawable/bg_btn_normal"
            android:layout_gravity="bottom"
            android:layout_marginLeft="70dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/back"
            android:text="昵称:"/>
        <EditText
            android:id="@+id/activity_login_ed_name"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:padding="5dip"
            android:textColorHint="#AAAAAA"
            android:textSize="15dip"
            android:hint="设置昵称" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/back"

            android:text="真实姓名:"/>

        <RadioGroup
            android:id="@+id/activity_registerInfo_RG_sexRadio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/activity_registerInfo_RB_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="男"/>

            <RadioButton
                android:id="@+id/activity_registerInfo_RB_women"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="女"/>

        </RadioGroup>
    </LinearLayout>



</LinearLayout>
