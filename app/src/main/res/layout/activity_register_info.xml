<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.zhtx.activity.RegisterInfoActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/activity_registerInfo_iv_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/head2" />

        <Button
            android:id="@+id/activity_registerInfo_btn_changeHead"
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:text="选择头像"
            android:background="@drawable/bg_btn_normal"
            android:layout_gravity="bottom"
            android:layout_marginLeft="70dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:textColor="@color/back"
            android:text="性别:"/>

        <RadioGroup
            android:id="@+id/activity_registerInfo_RG_sexRadio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/activity_registerInfo_RB_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="男"/>

            <RadioButton
                android:id="@+id/activity_registerInfo_RB_women"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="女"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/back"
            android:text="昵称:"/>
        <EditText
            android:id="@+id/activity_registerInfo_ed_name"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:padding="5dip"
            android:layout_marginLeft="20dp"
            android:textColorHint="#AAAAAA"
            android:textSize="15dip"
            android:hint="设置昵称"
            android:inputType="text"
            android:lines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/back"
            android:gravity="right"
            android:layout_marginTop="20dp"
            android:text="联系地址:"/>
        <EditText
            android:id="@+id/activity_registerInfo_ed_address"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="50dp"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_edittext"
            android:padding="5dip"
            android:textColorHint="#AAAAAA"
            android:textSize="13dip"
            android:hint="输入联系地址"
            android:inputType="textMultiLine"
            android:maxLines="2"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/back"
            android:text="出生日期:"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/activity_registerInfo_btn_birthday"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:padding="5dp"
                android:text="请选择出生日期"
                android:textColor="@color/white"
                android:layout_gravity="left"
                android:background="#48D1CC"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/activity_registerInfo_btn_commit"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:textColor="@color/white"
        android:text="完成资料填写"
        android:textSize="15dp"
        android:layout_margin="50dp"
        android:background="@drawable/bg_btn_theme"/>


</LinearLayout>