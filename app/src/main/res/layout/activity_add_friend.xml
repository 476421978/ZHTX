<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.zhtx.activity.AddFriendActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/ThemeColor">

        <ImageView
            android:id="@+id/activity_add_friend_iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加好友"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_margin="50dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <EditText
           android:id="@+id/activity_add_friend_ed_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:padding="5dp"
            android:background="@drawable/bg_edittext"
            android:hint="好友的电话号码"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/activity_add_friend_btn_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_normal"
            android:layout_marginLeft="15dp"
            android:text="搜索"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/bg_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_add_friend_iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/touxiang"/>

        <TextView
            android:id="@+id/activity_add_friend_tv_name"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="达波仔"
            android:textColor="@color/textBack"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/activity_add_friend_btn_add"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="添加好友"
            android:textColor="@color/white"
            android:background="@color/btnBlue"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/activity_add_friend_btn_see"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="查看信息"
            android:textColor="@color/white"
            android:background="@color/btnBlue"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/bg_gray"/>
    


</LinearLayout>
