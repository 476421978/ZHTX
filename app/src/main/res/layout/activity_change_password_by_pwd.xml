<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.zhtx.activity.ChangePasswordByPwd"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/ThemeColor">

        <ImageView
            android:id="@+id/activity_change_passwordByPwd_iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/back"
                android:text="旧密码:"/>
            <EditText
                android:id="@+id/activity_change_passwordByPwd_ed_oldPwd"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:padding="5dip"
                android:textColorHint="#AAAAAA"
                android:textSize="15dip"
                android:hint="请输入旧密码" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/back"
                android:text="新密码:"/>
            <EditText
                android:id="@+id/activity_change_passwordByPwd_ed_newPwd"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:padding="5dip"
                android:textColorHint="#AAAAAA"
                android:textSize="15dip"
                android:hint="请输入6-16密码" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/back"
                android:text="确认密码:"/>
            <EditText
                android:id="@+id/activity_change_passwordByPwd_ed_confirmPwd"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:padding="5dip"
                android:textColorHint="#AAAAAA"
                android:textSize="15dip"
                android:hint="再一次输入密码" />
        </LinearLayout>

        <TextView
            android:id="@+id/activity_change_passwordByPwd_tv_toVerification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="使用验证码修改密码"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:textColor="#1E90FF"/>

        <Button
            android:id="@+id/activity_change_passwordByPwd_btn_changePwd"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textColor="@color/white"
            android:text="确认修改"
            android:textSize="15dp"
            android:layout_margin="45dp"
            android:background="@drawable/bg_btn_theme"/>
    </LinearLayout>
</LinearLayout>
